<%= bootstrap_form_for [@noted, @footnote] do |f| %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <%= f.text_field :slug %>
    <%= f.hidden_field :noted_id %>
    <%= f.hidden_field :noted_type %>
    <%= f.collection_select :biblioentry_id, Biblioentry.all.order(:name), :id, :name, {include_blank: ''} %>


    <div class="jumbotron" >
      <%= f.text_area :body, as: :wysihtml5, cols: "80", rows: "15", hide_label: true %>
  </div>


  <%= f.primary "#{command_label}" %>
<script type="text/javascript">
  $(document).ready(function(){
    $('#footnote_body').each(function(i, elem) {
        $(elem).wysihtml5({
           toolbar: {
              "fa": true,
              "style": true,
              "font-styles": true,
              "emphasis": true,
              "lists": true,
              "html": true,
              "link": true,
              "image": true,
              "color": true
           },
           parser: function(html) {
              return html;
           }
        });
    });
  })
</script>

<% end %>
