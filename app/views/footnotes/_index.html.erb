<table>
  <thead>
    <tr>
      <th>Slug</th>
      <th>Body</th>
      <th>Noted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% footnotes.each do |footnote| %>
      <tr>
        <td><%= footnote.slug %></td>
        <td><%= footnote.body %></td>
        <td><%= (footnote.biblioentry.nil? ? '' : footnote.biblioentry.name) %></td>
        <td><%= link_to (fa_icon "search-plus"), footnote, :title => 'Show' %></td>
        <td><%= link_to (fa_icon "edit"), edit_footnote_path(footnote), :title => 'Edit' %></td>
        <td><%= link_to (fa_icon "trash-o"), footnote, method: :delete, data: { confirm: 'Are you sure?' }, :title => 'Destroy' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% unless @noted.nil? %>
<% @footer_content << "#{link_to 'New Footnote', "/#{@noted.class.name.underscore.pluralize}/#{@noted.id}/footnotes/#{Footnote.random_slug}", :class => "btn btn-default"}" %>
<% @footer_content << "#{link_to 'Back', "/#{@noted.class.name.underscore.pluralize}/show/#{@noted.id}", :class => "btn btn-default"}" %>
<% end %>
