<h1>Event Types</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Events</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_types.each do |event_type| %>
      <tr>
        <td><%= link_to event_type.name, event_type %></td>
        <td><%= event_type.holocene_events.count %></td>
        <td><%= event_type.body %></td>
        <td><%= link_to 'Show', event_type %></td>
        <td><%= link_to 'Edit', edit_event_type_path(event_type) %></td>
        <td><%= link_to 'Destroy', event_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="navbar-fixed-bottom footer">
<%= link_to 'New Event Type', new_event_type_path %>
</div>
