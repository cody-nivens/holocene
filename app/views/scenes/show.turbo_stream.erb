<%= turbo_stream.replace "objects" do %>
  <%= content_tag "turbo-frame", id: "objects" do %>
    <%= content_tag "turbo-frame", id: "#{dom_id @scene}" do %>
      <%= render partial: 'scenes/stats', locals: { scene: @scene, object: @scene } %>
      <%= render partial: "scenes/scene", locals: { scene:  @scene, scripted: @scripted, key_point: @key_point, pdf: nil, scenes_wi: @scenes_wi } %>
    <% end %>
  <% end %>
<% end %>
<%= turbo_stream.replace "header" do %>
    <%= render partial: 'scenes/header', locals: { scene: @scene, scenes_wi: @scenes_wi } %>
<% end %>
<%= turbo_stream.replace "new_object" do %>
  <%= content_tag "turbo-frame", class: "block", id: "new_object" do %>
  <% end %>
<% end %>
<%= turbo_stream.replace "side_controls" do %>
    <%= render partial: 'scenes/side_controls', locals: { scene: @scene, scenes_wi: @scenes_wi } %>
<% end %>
<%= turbo_stream.replace "nav-bar" do %>
  <%= content_tag "turbo-frame", class: "block", id: "nav-bar" do %>
    <%= render partial: "application/header" %>
  <% end %>
<% end %>
<%= render partial: "shared/send_flash" %>
