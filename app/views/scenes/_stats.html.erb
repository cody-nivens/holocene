<table class='table'>
  <tr>
    <th>ABC:</th><td><%= object.abc %></td>
    <th>Location:</th><td><%= (object.artifact.nil? ? 'Unkown' : object.artifact_name) %></td>
    <th>Place:</th><td><%= object.place.to_plain_text %></td>
    <th>Word Count:</th><td><%= number_with_delimiter(object.word_count, delimiter: ', ') %></td>
  </tr>
  <tr>
    <th>Time:</th><td><%= object.time_to_text %></td>
    <th>Check:</th><td><%= object.check %></td>
    <th>Scene/Sequel:</th><td><%= (object.scene_sequel == 1 ? 'Sequel' : 'Scene') %></td>
    <th>Selector:</th><td><%= selector_string(object.selector) %></td>
  </tr>
</table>
