<% scenes_wi = Scene.get_scenes_wi_to_array(scene.book) %>
<% scene_index = scenes_wi.find_index(scene.id) %>
<div id="side_controls" class="hide-print">
  <%= link_to (fa_icon 'pencil-alt', class: 'fa-fw'), edit_scene_path(scene), data: { turbo_target: "#{dom_id scene}"}, methods: :get, title: 'Edit Scene Data', class: 'btn' %>
  <%= link_to (fa_icon 'sticky-note', class: 'fa-fw'), scene_signets_path(scene_id: scene.id), data: { turbo_frame: "#{dom_id scene}" ,"bs-toggle": "tooltip", "bs-placement": "top", "bs-html":"true", "bs-title": "#{scene.signets_short_list}"},
    title: 'Signets', class: "btn #{!scene.signets.empty? ? Signet.color_class(scene.signets[0].color) : ''}" %>
  <%= link_to (fa_icon 'truck', class: 'fa-fw'), polymorphic_path([scene, :move]), title: 'Move', data: { turbo_frame: "#{dom_id scene}" }, class: 'btn' %>
  <%= link_to (fa_icon 'users', class: 'fa-fw'), polymorphic_path([scene, :characters_list]), data: { "turbo-frame": "edit-scene" }, method: :get, title: 'Characters', class: 'btn' %>

  <% if scene.section.nil? %>
    <%= link_to (fa_icon 'plus', class: 'fa-fw'), new_scene_section_path(scene), data: { "turbo-frame": "new_sections", "turbo-target": "edit-section" }, title: 'Add Text', class: 'btn'  %>
  <% else %>
    <%= link_to (fa_icon 'edit', class: 'fa-fw'), edit_section_path(scene.section), data: { "turbo-frame": "#{dom_id scene.section}" }, title: 'Edit Scene Text', class: 'btn'  %>
  <% end %>

  <% unless scene_index.nil? or scene_index == 0 %>
    <%= link_to (fa_icon 'angle-left', class: 'fa-fw'), scene_path(id: scenes_wi[scene_index - 1]), method: :get, class: 'btn', title: 'Previous Scene' %>
  <% end %>
  <% unless scene_index.nil? or scene_index == scenes_wi.length - 1 %>
    <%= link_to (fa_icon 'angle-right', class: 'fa-fw'), scene_path(id: scenes_wi[scene_index + 1]), method: :get, class: 'btn', title: 'Next Scene' %>
  <% end %>
  <%= link_to (fa_icon 'backward', class: 'fa-fw'),  return_or_default_path(book_view_path(scene.book, outline: true)), method: :get, class: 'btn', title: 'Back' %>
</div>

