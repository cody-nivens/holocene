<% print_name ||= false %>
<% inline_date ||= false %>
<% short_labels ||= false %>
<% target ||= :_blank %>
<% wc = scene.word_count %>
<% unless scene.section.nil? %>
  <strong><i><%= scene.section.name %></i></strong>
<% end %>
<% if inline_date %>
<%= scene.time_to_text %> :
<% else %>
  <%= (scene.section.nil? ? '*' : ' ') %> 
  <%#= (pdf.nil? ? link_to(scene.abc, scene_path(scene), target: target) : scene.abc) %>
  <%= (pdf.nil? ? link_to(scene.abc, scene_path(scene)) : scene.abc) %>
  <%= scene.time_to_text %>
<% end %>
<span style="background-color: #<%= (wc > 1000 ? '9FE2BF' : ( wc > 500 ? '40E0D0' : (wc > 250 ? 'DFFF00' : 'FF7F50'))) %>"><%= wc %></span>
<%= scene.artifact.nil? ? '' : "#{scene.artifact_name} - " %><%= scene.place.empty? ? '' : "#{scene.place&.to_plain_text}" %>
<% if print_name %>
  <br> <%= (short_labels ? scene.name : scene.plain_name) %>
<% end %>
