<% print_name ||= false %>
<% inline_date ||= false %>
<% short_labels ||= false %>
<% if inline_date %>
<%= scene.time_to_text %> :
<% else %>
<%= (scene.section.nil? ? '*' : ' ') %> <%= (pdf.nil? ? link_to(scene.abc, scene_path(scene), target: :_blank) : scene.abc) %>
<%= scene.time_to_text %>
: <%= scene.characters.size %> : <%= scene.word_count %> :
<% end %>
<%= scene.artifact.nil? ? '' : "#{scene.artifact_name} - " %><%= scene.place.empty? ? '' : "#{scene.place&.to_plain_text}" %>
<% if print_name %>
  <br> <%= (short_labels ? scene.name : scene.plain_name) %>
<% end %>
