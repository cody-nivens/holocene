<h1>Biblioentries</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Xreflabel</th>
      <th>Authors</th>
      <th># Citations</th>
      <th># Events</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @biblioentries.each do |biblioentry| %>
      <tr>
        <td><%= biblioentry.name %></td>
        <td><%= biblioentry.xreflabel %></td>
        <td><%= format_biblio_authors(biblioentry.authors) %></td>
        <td><%= biblioentry.footnotes.size %></td>
        <td><%= link_to (fa_icon 'search-plus'), biblioentry_path(biblioentry), title: 'Show' %></td>
        <td><%= link_to (fa_icon 'edit'), edit_biblioentry_path(biblioentry), title: 'Edit' %></td>
        <td><%= link_to (fa_icon 'trash'), biblioentry_path(biblioentry), method: :delete, data: { confirm: 'Are you sure?' }, title: 'Destroy' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% add_to_footer('New Biblioentry', new_book_biblioentry_path(@book)) %>
<% add_to_footer('Back', book_path(@book)) %>
