<h1>Biblioentries</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Xreflabel</th>
      <th>Copyright year</th>
      <th>Copyright holder</th>
      <th>Publisher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @biblioentries.each do |biblioentry| %>
      <tr>
        <td><%= biblioentry.name %></td>
        <td><%= biblioentry.xreflabel %></td>
        <td><%= biblioentry.copyright_year %></td>
        <td><%= biblioentry.copyright_holder %></td>
        <td><%= biblioentry.publisher %></td>
        <td><%= link_to 'Show', biblioentry %></td>
        <td><%= link_to 'Edit', edit_biblioentry_path(biblioentry) %></td>
        <td><%= link_to 'Destroy', biblioentry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="navbar-fixed-bottom footer">
<%= link_to 'New Biblioentry', new_biblioentry_path %>
</div>
