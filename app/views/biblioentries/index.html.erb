<h1>Biblioentries</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Xreflabel</th>
      <th># Citations</th>
      <th># Events</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @biblioentries.each do |biblioentry| %>
      <tr>
        <td><%= biblioentry.name %></td>
        <td><%= biblioentry.xreflabel %></td>
        <td><%= biblioentry.footnotes.count %></td>
        <td><%= link_to 'Show', book_biblioentry_path(@book, biblioentry) %></td>
        <td><%= link_to 'Edit', edit_book_biblioentry_path(@book, biblioentry) %></td>
        <td><%= link_to 'Destroy', book_biblioentry_path(@book, biblioentry), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% @footer_content <<  "#{link_to 'New Biblioentry', new_book_biblioentry_path(@book)}" %>
