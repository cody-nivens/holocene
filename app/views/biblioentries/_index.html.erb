<h3>Biblioentries</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Xreflabel</th>
      <th># Citations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% biblioentries.each do |biblioentry| %>
      <tr>
        <td><%= biblioentry.name %></td>
        <td><%= biblioentry.xreflabel %></td>
        <td><%= biblioentry.footnotes.count %></td>
        <td><%= link_to 'Show', biblioentry %></td>
        <td><%= link_to 'Edit', edit_biblioentry_path(biblioentry) %></td>
        <td><%= link_to 'Destroy', biblioentry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

