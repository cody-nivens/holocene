<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @act.name %>
</p>

<p>
  <strong>Book:</strong>
  <%= @act.book.name %>
</p>

<p>
  <%= @act.desc %>
</p>

<table class="table">
  <thead>
    <th>Stage</th>
    <th>Segments</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
  <% @act.stages.each do |stage| %>
    <tr>
      <td><%= link_to stage.name, stage_path(stage) %></td>
      <td><%= stage.segments.size %></td>
      <td><%= link_to 'Show', stage %></td>
      <td><%= link_to 'Edit', edit_stage_path(stage) %></td>
      <td><%= link_to 'Destroy', stage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div>
<%= link_to 'Edit', edit_act_path(@act), :class => "btn" %>
<%= link_to 'Back', book_acts_path(@book), :class => "btn" %>
</div>
