<h2>Location Times</h2>

<table>
  <thead>
    <tr>
      <th>Date String</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_times.each do |location_time| %>
      <tr>
        <td><%= location_time.date_string %></td>
        <td><%= link_to 'Show', location_time %></td>
        <td><%= link_to 'Edit', edit_location_time_path(location_time) %></td>
        <td><%= link_to 'Destroy', location_time, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="side_controls" class="hide-print">
<%= link_to (fa_icon 'plus', class: 'fa-fw'), new_segment_location_time_path(@segment), class: 'btn', title: 'New Location Time' %>
</div>
