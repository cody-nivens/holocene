<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @character.name %>
</p>

<p>
  <strong>Reason for name:</strong>
  <%= @character.reason_for_name %>
</p>

<p>
  <strong>Nickname:</strong>
  <%= @character.nickname %>
</p>

<p>
  <strong>Reason for nickname:</strong>
  <%= @character.reason_for_nickname %>
</p>

<p>
  <strong>Honorific:</strong>
  <%= @character.honorific %>
</p>

<p>
  <strong>Race:</strong>
  <%= @character.race %>
</p>

<p>
  <strong>Reign:</strong>
  <%= @character.reign %>
</p>

<p>
  <%= @character.birth_year %> - <%= @character.death_year %>
</p>

<p>
  <strong>Age at Son:</strong>
  <%= @character.age_at_son %>
</p>

<p>
  <%= @character.first_name %> <%= @character.middle_name %> <%= @character.last_name %> <%= @character.suffix %>
</p>

<p>
  <strong>Father:</strong>
  <%= (@character.father.nil? ? '' : @character.father.name) %>
</p>

<p>
  <strong>Occupation class:</strong>
  <%= @character.occupation_class %>
</p>

<p>
  <strong>Social class:</strong>
  <%= @character.social_class %>
</p>

<p>
<strong>Scenes:</strong>

<ul>
  <% @character.scenes.order(:abc).each do |scene| %>
<li><%= scene.full_name %></li>
<% end %>
</ul
</p>

<p>
  <strong>Background:</strong>
  <%= @character.background %>
</p>

<% @footer_content << "#{link_to 'Edit', edit_polymorphic_path([@object, @character]), :class => "btn btn-default"}" %>
<% @footer_content << "#{link_to 'Attributes', polymorphic_path([@object, @character, 'character_values']), :class => "btn btn-default"}" %>
<% @footer_content << "#{link_to 'Back', polymorphic_path([@object, 'characters']), :class => "btn btn-default"}" %>
