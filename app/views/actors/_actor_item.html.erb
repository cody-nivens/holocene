<div class="row">
  <div class="col-sm-2">
    <%= link_to actor.name, actor, method: :get %>
  </div>
  <div class="col-sm-2">
    <%= actor.actor_location_times.size %>
  </div>
  <div class="col-sm-2">
    <%= actor.characters.size %>
  </div>
  <div class="col-sm-2">
    <%= link_to (fa_icon 'edit', class: 'fa-fw'), edit_actor_path(actor), method: :get, title: "Edit" %>
    <%= link_to (fa_icon 'trash', class: 'fa-fw'), actor, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, title: 'Destroy' %>
  </div>
</div>
