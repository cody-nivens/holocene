<p id="notice"><%= notice %></p>

<h1>Actors</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Locations</th>
      <th>Characters</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td><%= actor.actor_location_times.size %></td>
        <td><%= actor.characters.size %></td>
        <td><%= link_to 'Show', actor %></td>
        <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
        <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
<%= link_to 'New Actor', new_book_actor_path(@book), :class => "btn" %>
</div>
