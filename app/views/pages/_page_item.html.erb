<div class="row">
  <div class="col col-sm-3">
    <%= link_to page.name, page, method: :get %>
  </div>
  <div class="col col-sm-3">
    <%= page.user.email %>
  </div>
  <div class="col-sm-2">
    <%= link_to (fa_icon 'edit', class: 'fa-fw'), edit_page_path(page, short: true), data: { "turbo-frame": "#{dom_id page}" }, title: 'Edit' %>
    <%= link_to (fa_icon 'trash', class: 'fa-fw'), page_path(page), method: :delete, data: { confirm: 'Are you sure?' }, title: 'Destroy' %>
  </div>
</div>
