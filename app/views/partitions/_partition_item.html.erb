<div class="row">
  <div class="col-sm-2"><%= link_to partition.name, partition_url(partition), method: :get %></div>
  <div class="col-sm-2"><%= partition.body %></div>
  <div class="col-sm-2"><%= partition.chapter_name %></div>
  <div class="col-sm-2"><%= link_to (fa_icon 'edit', class: 'fa-fw'), edit_partition_path(partition, short: true), title: 'Edit' %>
  <%= link_to (fa_icon 'trash', class: 'fa-fw'), partition_url(partition), method: :delete, data: { confirm: 'Are you sure?' }, title: 'Destroy' %></div>
</div>
