<p id="notice"><%= notice %></p>

<h1>Partitions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Chapter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @partitions.each do |partition| %>
      <tr>
        <td><%= partition.name %></td>
        <td><%= partition.body %></td>
        <td><%= partition.chapter_name %></td>
        <td><%= link_to 'Show', chapter_partition_url(partition.chapter,partition) %></td>
        <td><%= link_to 'Edit', edit_chapter_partition_path(partition.chapter,partition) %></td>
        <td><%= link_to 'Destroy', chapter_partition_url(partition.chapter,partition), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% @footer_content << "#{link_to 'New Partition', new_chapter_partition_path(@chapter), :class => "btn btn-default"}" %>
<% @footer_content << "#{link_to 'Back', chapter_path(@chapter), :class => "btn btn-default"}" %>
