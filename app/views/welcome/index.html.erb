<div data-controller="reset_frame">
  <div id="edit"> </div>
  <turbo-frame id="header" class="block">
    <%= render partial: "books/index_header", locals: { book: nil } %>
  </turbo-frame>
  <turbo-frame id="side_controls" class="block">
    <%= render partial: "books/index_sides", locals: { long: @long } %>
  </turbo-frame>
  <turbo-frame id="new_object" target="edit" class="block">
    <%= render partial: "books/new_link" %>
  </turbo-frame>
  <turbo-frame id="objects">
    <%= render partial: 'books/books' %>
  </turbo-frame>
</div>

