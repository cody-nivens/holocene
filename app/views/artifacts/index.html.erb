<p id="notice"><%= notice %></p>

<h1>Artifacts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner/Controller</th>
      <th>Type</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @artifacts.each do |artifact| %>
      <tr>
        <td><%= link_to artifact.name, book_artifact_url(@book,artifact) %></td>
        <td><%= artifact.character.name %></td>
        <td><%= artifact.artifact_type.name %></td>
        <td><%= link_to 'Edit', edit_book_artifact_path(@book,artifact) %></td>
        <td><%= link_to 'Destroy', book_artifact_path(@book,artifact), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% @footer_content << "#{link_to 'New', new_book_artifact_path(@book), :class => "btn btn-default"}" %>

