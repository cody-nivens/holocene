<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @artifact.name %>
</p>

<p>
  <strong>Owner/Controller:</strong>
  <%= @artifact.character.name %>
</p>

<% unless @artifact.children.empty? %>
<p>
  <strong>Children:</strong>
  <ul>
<% @artifact.children.each do |child| %>
  <li><%= child.name %></li>
<% end %>
  </ul>
</p>
<% end %>

<p>
<strong>Summary:</strong><br/>
  <%= @artifact.summary %>
</p>

<% @footer_content << "#{link_to 'Edit', edit_book_artifact_path(@book, @artifact), :class => "btn btn-default"}" %>
<% @footer_content << "#{link_to 'Back', book_artifacts_path(@book), :class => "btn btn-default"}" %>

