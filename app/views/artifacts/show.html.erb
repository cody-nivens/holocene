<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @artifact.name %>
</p>

<p>
  <strong>Owner/Controller:</strong>
  <%= @artifact.character_name %>
</p>

<p><strong>Tags:</strong> <%== @artifact.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>

<% unless @artifact.children.empty? %>
<p>
  <strong>Related Artifacts:</strong>
  <ul>
<% @artifact.children.each do |child| %>
  <li><%= child.name %></li>
<% end %>
  </ul>
</p>
<% end %>

<p>
<strong>Summary:</strong><br/>
  <%= @artifact.summary %>
</p>

<% @footer_content << "#{link_to 'Edit', edit_artifact_path(@artifact), :class => "btn btn-default"}" %>
<% @footer_content << "#{link_to 'Back', book_artifacts_path(@book), :class => "btn btn-default"}" %>

