<table class='table'>
    <tr><th>Name</th><th>Event Type</th><th>Region</th><th>Start Year</th></tr>
<% holocene_events.each do |he| -%>
        <tr>
          <td><%= (epub == true ? he.name : link_to(he.name,holocene_event_path(he))) %></td>
          <td><%= raw event_types_to_s(he.event_types, epub) %></td>
          <td><%= (epub == true ? he.region.name : link_to(he.region.name,region_path(he.region))) %></td>
          <td><%= HoloceneEvent.convert_ad(he.start_year, he.start_year_uncert) %><%= raw (he.end_year.nil?  ? "" : " - #{HoloceneEvent.convert_ad(he.end_year)}") %></td>
        </tr>
        <% unless he.body.blank? -%>
          <tr>
              <% @footnotes = process_body(he, @slugs, (@footnotes[2].nil? ? 1 : @footnotes[2])) -%>
              <td class="dd-type" colspan="5"><%= raw @footnotes[0] %></td>
              <% @slugs += @footnotes[1] -%>
           </tr>
        <% end -%>
<% end -%>
</table>
