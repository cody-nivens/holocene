<h2>Timelines</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Events</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timelines.each do |timeline| %>
      <tr>
        <td><%= timeline.name %></td>
        <td><%= timeline.holocene_events.size %></td>
        <td><%= timeline.description %></td>
        <td><%= link_to (fa_icon 'search-plus'), timeline, title: 'Show' %></td>
        <td><%= link_to (fa_icon 'edit'), edit_timeline_path(timeline), title: 'Edit' %></td>
        <td><%= link_to (fa_icon 'trash'), timeline, method: :delete, data: { confirm: 'Are you sure?' }, title: 'Destroy' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="side_controls" class="hide-print">
<%= link_to (fa_icon 'plus', class: 'fa-fw'), new_timeline_path, class: 'btn', title: 'New Timeline' %>
</div>
