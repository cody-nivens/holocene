<p>
  <strong>Name:</strong>
  <%= @object.name %>
</p>
<%= form_tag polymorphic_path([@object, :timeline]), method: :get, id: 'my-form' do %>
  <%= hidden_field_tag :object_id, @object.id %>
  <%= hidden_field_tag :object_type, @object.class.name %>

  <div class="form-check">
    <label class="checkbox">
      <%= check_box_tag :toggle, @toggle, @toggle, class: 'checkbox inline' %> Order
    </label>
  </div>

  <%= submit_tag 'Go' %>
<% end %>

<div data-controller="xtimelines">
  <%= render partial: 'timelines/timeline', formats: [:html], locals: { object: @object, toggle: @toggle } %>
</div>

<div id="side_controls" class="hide-print">
<%= link_to (fa_icon 'list-alt', class: 'fa-fw'), timeline_display_path(@object), class: 'btn', title: 'Display' %>
<%= link_to (fa_icon 'backward', class: 'fa-fw'), polymorphic_path(@object), class: 'btn', title: 'Back' %>
</div>
