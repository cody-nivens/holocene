<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <%= wicked_pdf_stylesheet_link_tag "pdf" -%>
    <%= wicked_pdf_javascript_include_tag "number_pages" %>
    <title><%= @book.name %></title>
  </head>
  <body onload='number_pages()'>
    <div id="header">
      <%#= wicked_pdf_image_tag 'mysite.jpg' %>
    </div>
    <div id="content">
    <%= render :partial => 'books/show.html', :locals =>{:outline => params[:outline], :pdf => true, :book => @book, chapters: @chapters} %>
    </div>
  </body>
</html>
