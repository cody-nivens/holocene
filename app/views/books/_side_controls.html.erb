<div id="side_controls" class="hide-print">
  <%= link_to (fa_icon 'edit', type: :regular, class: 'fa-fw'), edit_book_path(book, long: long), data:{ "turbo-frame": "new_object"  }, title: 'Edit', class: 'btn' %>
    <% if long.kind_of?(TrueClass) or long == "true" %>
      <%= link_to (fa_icon 'minus', type: :solid, class: 'fa-fw'), book_path(book), title: 'Show', method: :get, class: 'btn' %>
    <% else %>
      <%= link_to (fa_icon 'expand', type: :solid, class: 'fa-fw'), book_path(book, long: true), method: :get, title: 'Show, long', class: 'btn' %>
    <% end %>
  <%#= link_to (fa_icon 'plus', class: 'fa-fw'), book.is_fiction? ? new_book_story_path(book) : new_book_chapter_path(book), data: { "turbo-frame": "new_#{book.is_fiction? ? 'stories' : 'chapters'}", "turbo-target": "edit-#{book.is_fiction? ? 'story' : 'chapters'}" }, title: 'Add Text', class: 'btn'  %>
  <%# if action_name == 'toc' %>
  <%= link_to (fa_icon 'list', type: :solid, class: 'fa-fw'), book_path(book), method: :get, title: 'Book View', class: 'btn' %>
  <%# else %>
  <%#= link_to (fa_icon 'list', type: :solid, class: 'fa-fw'), book.fiction? ? book_path(book) : toc_path(book), method: :get, rel: 'next', title: 'Table of Contents', class: 'btn' %>
  <%# end %>
  <%= link_to (fa_icon 'eye', type: :solid, class: 'fa-fw'), book_view_path(book), method: :get, title: 'View', class: 'btn' %>
  <%= link_to (fa_icon 'newspaper', type: :regular, class: 'fa-fw'), book_view_path(book, outline: true, long: true), method: :get, title: 'View, outline', class: 'btn' %>
  <%= link_to (fa_icon 'file-pdf', type: :solid, class: 'fa-fw'), book_path(book, format: :pdf), title: 'PDF', class: 'btn' %>
  <%= link_to (fa_icon 'backward', class: 'fa-fw'),  books_path, method: :get, class: 'btn', title: 'Back' %>
</div>
