<%= link_to (fa_icon 'edit', type: :regular, class: 'fa-fw'), edit_book_path(@book, long: @long), data:{ "turbo-frame": "#{dom_id @book}"  }, title: 'Edit', class: 'btn' %>
<% if @long.kind_of?(TrueClass) or @long == "true" %>
  <%= link_to (fa_icon 'minus', type: :solid, class: 'fa-fw'), book_path(@book), title: 'Show', method: :get, class: 'btn' %>
<% else %>
  <%= link_to (fa_icon 'expand', type: :solid, class: 'fa-fw'), book_path(@book, long: true), method: :get, title: 'Show, long', class: 'btn' %>
<% end %>
<%= link_to (fa_icon 'sticky-note', type: :regular, class: 'fa-fw'), book_signets_path(@book), method: :get, title: 'Signets', class: 'btn' %>
<%= link_to (fa_icon 'eye', type: :solid, class: 'fa-fw'), book_view_path(@book), method: :get, title: 'View', class: 'btn' %>
<%= link_to (fa_icon 'newspaper', type: :regular, class: 'fa-fw'), book_view_path(@book, outline: true, long: true), method: :get, title: 'View, outline', class: 'btn' %>
<%= link_to (fa_icon 'file-pdf', type: :solid, class: 'fa-fw'), book_path(@book, format: :pdf), title: 'PDF', class: 'btn' %>
<% if @book.is_fiction? %>
  <%= link_to (fa_icon 'sort', class: 'fa-fw'), stories_sort_path(@book), class: 'btn', title: 'Sort', method: :get %>
<% else %>
  <%= link_to (fa_icon 'sort', class: 'fa-fw'), chapters_sort_path(@book), class: 'btn', title: 'Sort', method: :get %>
<% end %>
<%= link_to (fa_icon 'backward', class: 'fa-fw'),  books_path, method: :get, class: 'btn', title: 'Back' %>
