<h2>
  <%== breadcrumb(@book) %>
  <%= link_to (fa_icon 'edit'), edit_book_path(@book), title: 'Edit' %>
  <%= link_to (fa_icon 'sticky-note'), book_signets_path(@book), title: 'Signets' %>
  <%= link_to (fa_icon 'list'), book_view_path(@book), title: 'Show' %>
  <%= link_to (fa_icon 'book'), book_epub_path(@book), title: 'EPub' %>
  <%= link_to (fa_icon 'file-pdf'), book_path(@book, format: :pdf), title: 'PDF' %>
  <%= link_to (fa_icon 'file-pdf'), book_path(@book, format: :pdf, outline: true), title: 'PDF' %>
</h2>

<%= render partial: 'books/show', formats: [:html], locals: { outline: params[:outline], pdf: true, book: @book, chapters: @chapters } %>
<% add_to_footer('Back', @book) %>

