<h2>
  <%== breadcrumb(@book) %>
  <%= link_to (fa_icon 'edit', type: :regular), edit_book_path(@book), title: 'Edit' %>
  <%= link_to (fa_icon 'sticky-note', type: :regular), book_signets_path(@book), title: 'Signets' %>
  <%= link_to (fa_icon 'list', type: :solid), book_path(@book), title: 'Show' %>
  <%= link_to (fa_icon 'book', type: :solid), book_epub_path(@book), title: 'EPub' %>
  <%= link_to (fa_icon 'file-pdf', type: :solid), book_path(@book, format: :pdf), title: 'PDF' %>
  <%= link_to (fa_icon 'file-pdf', type: :regular), book_path(@book, format: :pdf, outline: true), title: 'PDF' %>
</h2>

<%= render partial: 'books/show', formats: [:html], locals: { outline: params[:outline], pdf: true, book: @book, chapters: @chapters } %>
<% add_to_footer('Back', @book) %>

