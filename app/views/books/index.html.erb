<h1>Books</h1>

<table class="table table-striped">
<thead>
<tr>
<th>Name</th>
<th>Authors</th>
<th colspan="3"></th>
</tr>
</thead>
<tbody>
<% @books.each do |book| %>
<tr>
<td><%= book.name %></td>
<% ts = "" -%>
<% book.authors.each do |author| -%>
<% ts += "#{author.first_name} #{author.last_name}" -%>
<% end -%>
<td><%= ts %></td>
<td><%= link_to 'Show', book %></td>
<td><%= link_to 'PDF', book_path(book, format: 'pdf') %></td>
<td><%= link_to 'Chapters', book_chapters_path(book) %></td>
<td><%= link_to 'Edit', edit_book_path(book) %></td>
<td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</tbody>
</table>


<% @footer_content << "#{link_to 'New Book', new_book_path, :class => "btn btn-primary"}" %>
