<%= bootstrap_form_for(book) do |f| %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.text_field :name %>
  <%= f.text_field :sub_name %>
  <%= f.check_box :show_events %>
  <%= f.check_box :fiction %>
  <%= f.text_field :copyright %>

  <%= f.hidden_field :user_id %>
  <%= f.rich_text_area :body, class: 'form-control customized-min-height' %>
  <%= f.rich_text_area :publisher, class: 'form-control customized-min-height' %>

  <%= f.primary command_label.to_s %>
<% end %>
