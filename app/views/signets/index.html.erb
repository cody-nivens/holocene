<% @title = "Signets" %>
<h2><%= @sigged.class.name %>: <%= (@sigged.class.name == 'Scene' && @sigged.section.present?) ? @sigged.section.name : @sigged.name %></h2>

<% if @sigged.signets.size > 0 %>
<table class='table'>
  <thead>
    <tr>
      <th>Signet</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sigged.signets.reload.each do |signet| %>
      <tr>
        <%= render partial: 'signets/signet_line', locals: { signet: signet, sigged: @sigged } %>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

<% add_to_footer('New Signet', new_polymorphic_path([@sigged, :signet])) %>
<% add_to_footer('Back', polymorphic_path(@sigged)) %>
