<h2>Editing Aside</h2>

<%= render 'form', aside: @aside, book: @book, chapter: @chapter %>

<div id="side_controls" class="hide-print">
<%= link_to (fa_icon 'search', class: 'fa-fw'), aside_path(@aside), class: 'btn', title: 'Show' %>
<%= link_to (fa_icon 'trash', class: 'fa-fw'), aside_path(@aside), data: { confirm: 'Are you sure?' }, class: 'btn', title: 'Destroy', method: :delete %>
<%= link_to (fa_icon 'backward', class: 'fa-fw'),  return_or_default_path(chapter_path(@chapter)), class: 'btn', title: 'Back' %>
</div>
