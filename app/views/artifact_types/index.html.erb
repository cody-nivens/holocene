<% @title = "Artifact Types" %>
<h2>Artifact Types</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @artifact_types.each do |artifact_type| %>
      <tr>
        <td><%= link_to artifact_type.name, artifact_type_path(artifact_type) %></td>
        <td><%= artifact_type.location %></td>
        <td><%= link_to (fa_icon 'edit', class: 'fa-fw'), edit_artifact_type_path(artifact_type), title: 'Edit' %>
        <%= link_to (fa_icon 'trash', class: 'fa-fw'), artifact_type_path(artifact_type), method: :delete, data: { confirm: 'Are you sure?' }, title: 'Destroy' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="side_controls" class="hide-print">
<%= link_to (fa_icon 'plus', class: 'fa-fw'), new_polymorphic_path([@book, :artifact_type]), class: 'btn', title: 'New Artifact Type' %>
<%= link_to (fa_icon 'backward', class: 'fa-fw'), book_path(@book), class: 'btn', title: 'Back' %>
</div>
