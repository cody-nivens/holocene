<p id="notice"><%= notice %></p>

<h1>Character Categories</h1>

<ul>
  <div class="chapter_outer-sortable" style="cursor: grab;">
    <%= content_tag 'div'  do %>
      <div class="character_category-sortable" style="cursor: grab; min-height: 10px;">
        <% @character_categories.rank(:position).each do |character_category| %>
          <%= content_tag 'div', id: "character_category-#{character_category.id}", data: { model_name: character_category.class.name.underscore, update_url: character_category_sort_path(character_category) } do %>
            <li>
              <%= link_to character_category.name, character_category %>
              <%= link_to (fa_icon 'edit'), edit_character_category_path(character_category) %>
              <%= link_to (fa_icon 'trash-o'), character_category, method: :delete, data: { confirm: 'Are you sure?' } %>
            </li>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</ul>

<% add_to_footer('New Character Category', new_character_category_path) %>
<% unless @book.nil? %>
  <% add_to_footer('Back', book_path(@book)) %>
<% end %>
