<p id="notice"><%= notice %></p>

<h1>Character Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="sortable">  <!-- sortable target -->
    <% @character_categories.each_with_sortable_id do |character_category, sortable_id| %>
      <tr  id="<%= sortable_id %>">
        <td><%= character_category.name %></td>
        <td><%= link_to 'Show', character_category %></td>
        <td><%= link_to 'Edit', edit_character_category_path(character_category) %></td>
        <td><%= link_to 'Destroy', character_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% @footer_content << "#{link_to 'New Character Category', new_character_category_path, :class => "btn btn-default"}" %>
<% unless @book.nil? %>
  <% @footer_content << "#{link_to 'Back', book_path(@book), :class => "btn btn-default" }" %>
<% end %>

<script>
$(function() {
  $('.sortable').railsSortable();
});
</script>

