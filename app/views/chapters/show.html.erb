<h1>
  <%= @chapter.name %>
| <%= link_to 'Edit',     edit_book_chapter_path(@chapter.book, @chapter) %>
</h1>

<% @slugs = [] -%>
<% @footnotes = process_body(@chapter, @slugs) -%>
<%= raw @footnotes[0]  %>
<% @slugs += @footnotes[1] -%>

<% @chapter.sections.each do |section| -%>
<h2><%= section.name %></h2>
<% @footnotes = process_body(section, @slugs, @footnotes[2]) -%>

<% @slugs += @footnotes[1] -%>
<%= raw @footnotes[0]  %>
<% unless section.holocene_events.length == 0 -%>
<%= render 'holocene_events/index.html', holocene_events: section.holocene_events.order(:start_year) %>
<% end -%>
<% end -%>

<% unless @chapter.holocene_events.length == 0 -%>
<%= render 'holocene_events/index.html', holocene_events: @chapter.holocene_events.order(:start_year) %>
<% end -%>

<% unless @slugs.length == 0 -%>
<%= raw write_footnotes(@slugs) %>
<% end -%>

<% unless @chapter.citations.length == 0 -%>
<%= raw render "footnotes/citations", footnotes: @chapter.citations  %>
<% end -%>
<% @footer_content << "#{link_to 'Sections', book_chapter_sections_path(@chapter.book, @chapter)}" %>
<% @footer_content << "#{link_to 'Timeline', chapter_timeline_path(@chapter)}" %>
<% @footer_content << "#{link_to 'Display',  chapter_display_path(@chapter)}" %>
<% @footer_content << "#{link_to 'Footnotes',chapter_footnotes_path(@chapter)}" %>
<% @footer_content << "#{link_to 'Back',     book_chapters_path(@chapter.book)}" %>
