<table class="table table-striped">
    <thead>
        <tr>
            <th>Partition</th>
            <th>Name</th>
<!--            <th>Sections</th> -->
            <th>Word Count</th>
            <th>Events</th>
            <th>Footnotes</th>
            <th>Citations</th>
            <th colspan=3></th>
        </tr>
    </thead>
  <tbody class="sortable">
    <% @chapters.each_with_sortable_id do |chapter, sortable_id| %>
      <tr id="<%= sortable_id %>">
    <% if chapter.partition.nil? %>
        <td><%= link_to (fa_icon "plus"), new_book_chapter_partition_path(@book, chapter), :title => "Partition"  %>
    <% else %>
        <td><%= link_to (fa_icon "pencil"), book_chapter_partition_path(@book, chapter,chapter.partition), :title => "Partition"  %>
    <% end %>
        <%= raw (chapter.partition.nil? ? '' : "#{link_to chapter.partition.name, book_chapter_partition_path(chapter.book,chapter,chapter.partition)}") %></td>
        <td><%= link_to (fa_icon "pencil"), edit_book_chapter_path(@book, chapter), :title => "Edit"  %>
        <%= link_to chapter.name, book_chapter_path(@book, chapter), :title => "Show"  %>
    <% if chapter.aside.nil? %>
        <%= link_to (fa_icon "plus"), new_book_chapter_aside_path(@book, chapter), :title => "Aside" %>
    <% else %>
        <br/>
        <%= link_to chapter.aside.name, book_chapter_aside_path(@book, chapter, chapter.aside), :title => chapter.aside.name %>
        <%= link_to (fa_icon "pencil"), edit_book_chapter_aside_path(@book, chapter,chapter.aside), :title => "Edit Aside" %>
    <% end %>
        </td>
        <td align="right"><%= number_with_delimiter chapter.word_count %>
    <% unless chapter.aside.nil? %>
        <br/><%= chapter.aside.word_count %>
    <% end -%>
        </td>
        <td align="right"><%= chapter.total_events %></td>
        <td align="right"><%= number_with_delimiter chapter.footnotes.count %></td>
        <td align="right"><%= number_with_delimiter chapter.citations.count %></td>
        <td><%= link_to (fa_icon "list-alt"), book_chapter_sections_path(chapter.book, chapter), :title => "Sections"  %></td>
        <td><%= link_to (fa_icon "file-pdf-o"), book_chapter_path(@book,chapter, format: 'pdf'), :title => "PDF"  %></td>
        <td><%= link_to (fa_icon "trash-o"), book_chapter_path(@book, chapter), method: :delete, data: { confirm: 'Are you sure?' }, :title => "Destroy"  %></td>
      </tr>
        <% chapter.sections.order(:position).each do |section| -%>
          <tr><td></td>
          <td><%= section.name %></td>
          <td align="right"><%= number_with_delimiter section.word_count %></td>
          <td align="right"><%= section.holocene_events.count %></td>
          <td align="right"><%= section.footnotes.count %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
          </tr>
        <% end -%>
        </td>
        
        </td>

    <% end %>
  </tbody>
</table>

