<%= form_with url: polymorphic_path([@scripted, @key_point, :add]) do |f| %>

  <%= f.hidden_field :selector, value: @selector %>
  <%= hidden_field "#{@scripted.class.name.underscore}_id", value: @scripted.id %>

  <h2>Scenes for "<%= @key_point.name %>" in "<%= @scripted.name %>"</h2>

<table class="table">
  <tr>
      <td style="width:40%">
          <%= select_tag :scenes_ids, options_from_collection_for_select(@key_point.scenes.includes([:rich_text_summary]).where(selector: @selector), :id, :name), prompt: 'Select Scene', multiple: true, size: 20 %>
      </td><td style="width:20%">
          <%= f.submit class: 'btn btn-primary' %>
      </td><td style="width:40%">
          <%= select_tag :scenes_avail, options_from_collection_for_select(@scripted.scenes.includes([:rich_text_summary]).where(selector: 0), :id, :name), prompt: 'Select Scene', multiple: true, size: 20 %>
      </td>
  </tr>
</table>

<% end %>

<div id="side_controls" class="hide-print">
<%= link_to (fa_icon 'plus', class: 'fa-fw'), new_key_point_scene_path(@key_point, selector: @selector.to_i), class: 'btn', title: 'New Scene' %>
<%= link_to (fa_icon 'backward', class: 'fa-fw'), polymorphic_path([@scripted, :key_points]), class: 'btn', title: 'Back' %>
</div>
