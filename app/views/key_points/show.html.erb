<p id="notice"><%= notice %></p>
<% @title = @key_point.name %>
<h2>
  <%= raw breadcrumb((@scripted.class.name == "Book" ? @scripted : (@scripted.class.name == "Chapter" ? @scripted.scripted : @scripted.book)), @scripted, @key_point) %>
  <%= link_to "#{(fa_icon "pencil")}".html_safe, edit_key_point_path(@key_point), :title => 'Edit' %>
  <%= link_to "#{(fa_icon "trash-o")}".html_safe, key_point_path(@key_point), method: :delete, data: { confirm: 'Are you sure?' }, :title => 'Destroy' %>
</h2>

<table class="table">
  <tr>
    <th>Print name:</th>
    <td><%= (@key_point.print_name? ? fa_icon("check") : '') %></td>
    <th>Print points:</th>
    <td><%= (@key_point.print_points? ? fa_icon("check") : '') %></td>
    <th>Word Count:</th>
    <td><%= number_with_delimiter(@key_point.word_count, :delimiter => ',') %></td>
  </tr>
</table>

<p>
  <strong>Inciting incident:</strong> <%= @key_point.inciting_incident %><br/>
</p>

<p>
  <strong>Key element:</strong> <%= @key_point.key_element %>
</p>

<%= tabs do |c| %>
  <% 1.upto(6).each do |selector| %>
    <% c.tab KeyPoint.selector_title(selector) do %>
      <span>
        <h3><%= link_to (fa_icon 'plus'), polymorphic_path([@scripted, @key_point, :list], selector: 1) %> <%= @key_point.selector_value(selector) %></h3>
        <%= render partial: 'key_points/scenes', :locals => {selector: selector, key_point: @key_point, story: @scripted, scripted: @scripted} %>
      </span>
    <% end %>
  <% end %>
<% end %>

<% @footer_content << "#{link_to 'Move', polymorphic_path([@scripted, @key_point, :move]), :class => "btn btn-default hide-print" }" %>
<% @footer_content << "#{link_to 'Back', polymorphic_path([@scripted], anchor: @key_point.anchor), :class => "btn btn-default"}" %>

<% prev_key_point = @key_point.set_prev %>
<% unless prev_key_point.nil? %>
  <% @footer_content << "#{link_to '<', key_point_path(prev_key_point), :class => "btn icon-ok icon-white" }" %>
<% end %>
<% next_key_point = @key_point.set_next %>
<% unless next_key_point.nil? %>
  <% @footer_content << "#{link_to '>', key_point_path(next_key_point), :class => "btn icon-ok icon-white" }" %>
<% end %>
