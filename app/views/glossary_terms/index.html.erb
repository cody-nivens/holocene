<% @title = "Glossary Terms" %>
<h2>Glossary Terms</h2>

<table class='table table-striped'>
  <thead>
    <tr>
      <th></th>
      <th>Events</th>
      <th>See<br>
      Seealso<br>
      Acronym</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @glossary_terms.each do |glossary_term| %>
      <tr>
          <td>
            <dt>
              <%= link_to glossary_term.name, glossary_term_url(glossary_term), title: 'Show' %>
            </dt>
          <dd><%= glossary_term.body %></dd>
      </td>
      <td>
      <%= HoloceneEvent.tagged_with(glossary_term.name.gsub(/ /, '')).size %>
      </td>
      <td>
        <%= (glossary_term.see.nil? ? '' : glossary_term.see_name) %><br>
        <%= (glossary_term.seealso.nil? ? '' : glossary_term.seealso_name) %><br>
    <%= (glossary_term.acronym.nil? ? '' : glossary_term.acronym_name) %>
    </td>

      <td>
          <%= link_to (fa_icon 'edit'), edit_glossary_term_path(glossary_term), title: 'Edit' %><br>
          <%= link_to (fa_icon 'trash'), glossary_term_url(glossary_term), method: :delete, data: { confirm: 'Are you sure?' }, title: 'Destroy' %>
    </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="side_controls" class="hide-print">
<%= link_to (fa_icon 'plus', class: 'fa-fw'), new_book_glossary_term_path(@book), class: 'btn', title: 'New Glossary Term' %>
<%= link_to (fa_icon 'backward', class: 'fa-fw'), book_path(@book), class: 'btn', title: 'Back' %>
</div>
