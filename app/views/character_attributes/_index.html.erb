        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Related</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% CharacterAttribute.where(character_category: @character_category).each do |character_attribute| %>
              <tr>
                <td><%= character_attribute.name %></td>
                <td><%= (character_attribute.related_id.nil? ? "" : CharacterAttribute.find(character_attribute.related_id).name ) %></td>
                <td><%= link_to 'Show', character_attribute %></td>
                <td><%= link_to 'Edit', edit_character_attribute_path(character_attribute) %></td>
                <td><%= link_to 'Destroy', character_attribute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
