<% attributes = CharacterAttribute.where(character_category: character_category) %>
<% unless attributes.empty? %>
 <table class="table table-striped">
   <thead>
     <tr>
       <th>Name</th>
       <th>Related</th>
       <th colspan="3"></th>
     </tr>
   </thead>

   <tbody class="sortable">
     <% attributes.each_with_sortable_id do |character_attribute, sortable_id| %>
      <tr  id="<%= sortable_id %>">
         <td><%= character_attribute.name %></td>
         <td><%= character_attribute.related_name %></td>
         <td><%= link_to 'Show', character_attribute %></td>
         <td><%= link_to 'Edit', edit_character_attribute_path(character_attribute) %></td>
         <td><%= link_to 'Destroy', character_attribute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
<% end %>

<script>
$(function() {
  $('.sortable').railsSortable();
});
</script>

