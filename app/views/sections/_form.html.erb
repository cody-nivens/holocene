<%= bootstrap_form_for section, :url => {:controller => :sections, :action => (section.id.nil? ? :create : :update)} do |f| %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.hidden_field :sectioned_id %>
  <%= f.hidden_field :sectioned_type %>
  <%= f.hidden_field :user_id %>

  <%= f.text_field :name %>
  <%= f.check_box :display_name %>
  <%= f.text_field :embed %>

  <%= f.rich_text_area :body, class: "form-control customized-min-height" %>

  <%= f.primary "#{command_label}" %>

<% end %>
