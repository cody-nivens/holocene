<%= render partial: "#{section.sectioned_type.underscore.pluralize}/stats", locals: { object: section.sectioned } %>
<%= bootstrap_form_for section, url: { controller: :sections, action: (section.id.nil? ? :create : :update) } do |f| %>
<div class="container">
  <div class="row">
    <div class="col-12">
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <%= f.hidden_field :sectioned_id %>
      <%= f.hidden_field :sectioned_type %>
      <%= f.hidden_field :user_id %>

      <%= f.text_field :name %>
      <%= f.check_box :display_name %>
      <%= f.text_field :embed %>

      <%= tabs do |c| %>
        <% c.tab 'Text' do %>
          <div class='field'>
            <%= f.rich_text_area :body, class: 'form-control customized-min-height' %>
          </div>
          <%= f.primary command_label.to_s %>
        <% end %>
        <% c.tab 'Characters' do %>
          <% unless section.sectioned_type == 'Chapter' %>
            <div>
              <%= render partial: 'characters/characters_occ_ul', formats: [:html], locals: { object: @sectioned } %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
