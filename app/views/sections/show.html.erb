<p>
  <strong>Name:</strong>
  <%= @section.name %>
</p>

<% @slugs = [] -%>
<% @footnotes = process_body(@section, @slugs) -%>
<%= raw @footnotes[0]  %>
<% @slugs += @footnotes[1] -%>

<% unless @section.holocene_events.length == 0 -%>
<%= render 'holocene_events/index.html', holocene_events: @section.holocene_events.order(:start_year) %>
<% end -%>

<% unless @slugs.length == 0 -%>
<%= raw write_footnotes(@slugs) %>
<% end -%>

<div class="navbar-fixed-bottom footer">
<%= link_to 'Edit', edit_book_chapter_section_path(@book, @chapter, @section) %> |
<%= link_to 'Timeline', section_timeline_path(@section.chapter.book, @section.chapter, @section) %> |
<%= link_to 'Display',  section_display_path(@section) %> |
<%= link_to 'Back', book_chapter_path(@book, @chapter) %>
</div>
