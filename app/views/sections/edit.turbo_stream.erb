<%= turbo_stream.replace "#{dom_id object}" do %>
  <%= content_tag "turbo-frame", id: "#{dom_id object}", class: "block" do %>
    <%= render partial: "#{object.class.name.underscore.pluralize}/edit", locals: { "#{object.class.name.underscore}": object } %>
  <% end %>
<% end %>
<%= render partial: "shared/send_flash" %>
