<h1>Authors</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.first_name %></td>
        <td><%= author.last_name %></td>
        <td><%= author.books.count %></td>
        <td><%= author.biblioentries.count %></td>
        <td><%= link_to (fa_icon "search-plus"), book_author_path(@book,author), :title => 'Show' %></td>
        <td><%= link_to (fa_icon "edit"), edit_book_author_path(@book,author), :title => 'Edit' %></td>
        <td><%= link_to (fa_icon "trash-o"), book_author_path(@book,author), method: :delete, data: { confirm: 'Are you sure?' }, :title => 'Destroy' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% @footer_content << "#{link_to 'New Author', new_book_author_path(@book), :class => "btn btn-default"}" %>
