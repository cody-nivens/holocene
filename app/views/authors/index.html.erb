<% @title = "Authors" %>
<h2>Authors</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Books</th>
      <th>Biblioentries</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.first_name %></td>
        <td><%= author.last_name %></td>
        <td><%= author.books.size %></td>
        <td><%= author.biblioentries.size %></td>
        <td><%= link_to (fa_icon 'search-plus'), polymorphic_path([@object, author]), title: 'Show' %></td>
        <td><%= link_to (fa_icon 'edit'), edit_polymorphic_path([@object, author]), title: 'Edit' %></td>
        <td><%= link_to (fa_icon 'trash'), polymorphic_path([@object, author]), method: :delete, data: { confirm: 'Are you sure?' }, title: 'Destroy' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="side_controls">
<%= link_to (fa_icon 'plus'), new_polymorphic_path([@object, :author]), class: 'btn icon-ok icon-white', title: "New Author" %>
<%= link_to (fa_icon 'exchange-alt'), polymorphic_path([@object, :authors_list]), class: 'btn icon-ok icon-white', title: "Add Author" %>
</div>
