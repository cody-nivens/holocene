<div class="row">
  <div class="col-sm-2"><%= link_to character_value.character_attribute.character_category_name, polymorphic_path([@object, @character, character_value]), method: :get %></div>
  <div class="col-sm-2"><%= character_value.character_attribute_name %></div>
  <div class="col-sm-2"><%= character_value.value %></div>
  <div class="col-sm-2"><%= link_to 'Edit', edit_polymorphic_path([@object, @character, character_value], short: true) %>
