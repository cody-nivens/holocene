<p id="notice"><%= notice %></p>

<h1>Character Values</h1>

<table class="table">
  <thead>
    <tr>
      <th>Category</th>
      <th>Attribute</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character_values.joins(:character_attribute).order(:name).each do |character_value| %>
      <tr>
        <td><%= character_value.character_attribute.character_category_name %></td>
        <td><%= character_value.character_attribute_name %></td>
        <td><%= character_value.value %></td>
        <td><%= link_to 'Show', polymorphic_path([@object, @character, character_value]) %></td>
        <td><%= link_to 'Edit', edit_polymorphic_path([@object, @character, character_value]) %></td>
        <td><%= link_to 'Destroy', polymorphic_path([@object, @character, character_value]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% add_to_footer('New Character Value', new_polymorphic_path([@object, @character, :character_value])) %>
<% add_to_footer('Back', polymorphic_path([@object, @character])) %>
