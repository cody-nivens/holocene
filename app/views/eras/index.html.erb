<p id="notice"><%= notice %></p>

<h1>Eras</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @eras.each do |era| %>
      <tr>
        <td><%= era.name %></td>
        <td><%= era.start_date %></td>
        <td><%= era.end_date %></td>
        <td><%= link_to 'Show', era %></td>
        <td><%= link_to 'Edit', edit_era_path(era) %></td>
        <td><%= link_to 'Destroy', era, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

