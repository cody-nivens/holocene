<div class="row">
  <div class="col-sm-2"><%= link_to stage.name , stage, method: :get %></div>
  <div class="col-sm-2"><%= stage.segments.size %></div>
  <div class="col-sm-2"><%= link_to (fa_icon 'edit', class: 'fa-fw'), edit_stage_path(stage, short: true), title: 'Edit' %>
  <%= link_to (fa_icon 'trash', class: 'fa-fw'), stage, method: :delete, data: { confirm: 'Are you sure?' }, title: 'Destroy' %></div>
</div>
