<p>
  <strong>Stage:</strong>
  <%= @stage.name %>
</p>

<p>
  <%= @stage.desc %>
</p>


<div id="stage-text">
  <%= render partial: "stages/show", locals: { stage: @stage, check: @check, op: @op } %>
</div>

<br>

<div id="side_controls">
<%= link_to (fa_icon 'edit'), edit_stage_path(@stage), :class => "btn" %>
<%= link_to (fa_icon 'list'), stage_report_path(@stage), :class => "btn" %>
<%= link_to 'Back', act_stages_path(@act), :class => "btn" %>
</div>
